<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.st028.texasim" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.TexasIMApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.Default_theme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewLeagueActivity"
            android:label="@string/title_activity_view_league" >
        </activity>
        <activity
            android:name=".activities.FollowNewLeagueActivity"
            android:label="@string/title_activity_follow_new_league"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.LicenseActivity"
            android:label="@string/title_activity_license"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.st028.texasim.activities.LicenseActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
    </application>

</manifest>
