<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xenithturtle.texasim" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Default_theme" >
        <activity
            android:name="com.xenithturtle.texasim.activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xenithturtle.texasim.activities.ViewLeagueActivity"
            android:label="@string/title_activity_view_league" >
        </activity>
        <activity
            android:name="com.xenithturtle.texasim.activities.FollowNewLeagueActivity"
            android:label="@string/title_activity_follow_new_league" >
        </activity>
        <activity
            android:name="com.xenithturtle.texasim.activities.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
